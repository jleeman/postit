<% if @post.errors.any? %>
  <div class="row">
    <div class="alert alert-error span8">
      <h5>Please correct the following:</h5>
      <ul>
        <% @post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  </div>
<% end %>

<div class="well">
  <%= form_for @post do |f| %>
    <div class="control-group">
      <%= f.label :title %>
      <%= f.text_field :title %>
    </div>
    <div class="control-group">
      <%= f.label :url %>
      <%= f.text_field :url %>
    </div>
    <div class="control-group">
      <%= f.label :description %>
      <%= f.text_area :description, rows: 8 %>
    </div>
    <%= f.submit(@post.new_record? ? 'Create Post' : 'Edit Post', class: 'btn btn-primary') %>
  <% end %>
</div>
