<%= render 'shared/content_title', title: "Create a Post" %>

<div class="well">
  <%= form_for @post do |f| %>
    <div class="control-group">
      <%= f.label :title %>
      <%= f.text_field :title %>
    </div>
    <div class="control-group">
      <%= f.label :url %>
      <%= f.text_field :url %>
    </div>
    <div class="control-group">
      <%= f.label :description %>
      <%= f.text_area :description, rows: 8 %>
    </div>
    <%= f.submit 'Create a Post', class: 'btn btn-primary' %>
  <% end %>
</div>
